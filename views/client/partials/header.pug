include ../mixins/sub-menu.pug

header.header 
  .container 
    .row.align-item-center 
      .col-3 
        .inner-logo 
          a(href="/")
            img(src="/images/logo.jfif")
      
      .col-4 
        form(
          action="/search"
          method="GET"
        )
          div(class="form-group d-flex mb-0")
            input(
              type="text"
              placeholder="Nhập từ khóa ..."
              class="form-control"
              name="keyword"
              value=keyword
            )
            button(
              type="submit"
              class="btn btn-primary"
            ) Tìm

      .col-5
        .inner-menu
          ul(class="flex")
            li
              a(href="/") Trang chủ
            li(class="sub-menu")
              -const pathProduct = "/products"
              a(href="/products" ) Sản phẩm 
              +sub-menu(layoutProductsCategory, pathProduct)
            li 
              a(href="/cart") Giỏ hàng (#{miniCart ? miniCart.totalQuantity : "0"})