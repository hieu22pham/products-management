extends ../../layouts/auth.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)
  
  .container.my-5
    .row.justify-content-center  
      .col-8 
        h1(class="text-center") Đăng nhập
        form(
          action=`${prefixAdmin}/auth/login`
          method="POST"
        )
          div(class="form-group left-200")
            label(for="email") Email
            input(
              type="email"
              class="form-control w-350"
              id="email"
              name="email"
            )
          
          div(class="form-group left-200 mt-3")
            label(for="password") Mật khẩu
            input(
              type="password"
              class="form-control w-350"
              id="password"
              name="password"
            )
          
          div(class="form-group left-330 mt-3")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Đăng nhập