extends ../../layouts/default.pug
include ../../mixins/filterStatus.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/changeMulti.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug

block main
  +alert-suceess(5000)
  
  h1(class="mb-4") Nhóm quyền

  .card.mb-3 
    .card-header Danh sách
      .card-body 
        .row 
          .col-8
          .col-4
            a(
              href=`${prefixAdmin}/roles/create` 
              class="btn btn-outline-success"
            ) + Thêm mới
        
        table(
          class="table table-hover table-sm mt-4" 
          checkbox-multi
        )  
          thead
            tr  
              th 
                input(type="checkbox" name="checkall")
              th STT 
              th Nhóm quyền
              th Mô tả 

          tbody 
            each item, index in products
              tr(class="tr") 
                td 
                  input(
                    type="checkbox"
                    name="id"
                    value=item.id
                  )
                td #{pagination.limitItem*(pagination.currentPage - 1) + index + 1}
                td 
                  img(
                    src = item.thumbnail
                    alt=item.title
                    width="100px"
                    height="100px"
                    style="object-fit: cover"
                  )
                td #{item.title}
                td #{item.price}
                td 
                  input(
                    type="number"
                    value=item.position
                    style="width: 60px"
                    min=1
                    name="position"
                  )
                td
                  if(item.status == "active")
                    a(href="javascript:;"
                    data-status=item.status
                    data-id=item.id
                    button-change-status
                     class="badge bg-success") Hoạt động
                  else 
                    a(href="javascript:;"
                    data-status=item.status
                    data-id=item.id
                    button-change-status 
                    class="badge bg-warning") Dừng hoạt động
                td 
                  a(
                      href=`${prefixAdmin}/products/detail/${item.id}`
                      class="btn btn-secondary btn-sm"
                      ) Chi tiết
                  a(
                    href=`${prefixAdmin}/products/edit/${item.id}`
                    class="btn btn-warning btn-sm"
                    ) Sửa 
                  button(
                    class="btn btn-danger btn-sm ms-1" 
                    button-delete 
                    data-id=item.id
                  ) Xóa