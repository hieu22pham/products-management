extend ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)
  +alert-success(5000)

  h1(class="mb-4") #{pageTitle}

  .w-1100
    form(
      action=`${prefixAdmin}/my-account/edit?_method=PATCH`
      enctype="multipart/form-data"
      method="POST"
    )
      div(class="form-group")
        label(for="fullName") Họ và tên
        input(
          type="text"
          class="form-control"
          value=user.fullName
          required
          id="fullName"
          name="fullName"
        )
      
      div(class="form-group")
        label(for="email") Email
        input(
          type="email"
          class="form-control"
          value=user.email
          required
          id="email"
          name="email"
        )
     
      div(class="form-group")
        label(for="email") Số điện thoại
        input(
          type="phone"
          class="form-control"
          value=user.phone
          required
          id="phone"
          name="phone"
        )
      
      div(class="form-group"
        class="mt-3"
        upload-image
      )
        label(for="avatar" ) Avatar 
        input(
          type="file"
          class="form-control-file ms-2"
          id="avatar"
          name="avatar"
          accept="image/*"
          upload-image-input
        )
        <br>
        img(src=`${user.avatar}` 
          upload-image-preview
          class="image-preview"
        )
      
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-primary mt-3"
        ) Cập nhật

