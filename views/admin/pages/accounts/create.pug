
extends ../../layouts/default.pug 
include ../../mixins/alert.pug

block main
  h1(class="mb-4") Thêm mới tài khoản
  +alert-error(5000)
  form(
  action=`${prefixAdmin}/accounts/create`
  method="POST"
  enctype="multipart/form-data")

    div(class="form-group")
      label(for="fullName") Họ tên
      input(
      type="text"
      class="form-control"
      id="fullName"
      name="fullName"
      required)

    div(class="form-group") 
      label(for="email") Email *
      input(
        type="email"
        class="form-control"
        id="email"
        name="email"
        required
      )
    div(class="form-group") 
      label(for="email") Mật khẩu *
      input(
        type="password"
        class="form-control"
        id="password"
        name="password"
        required
      )
    div(class="form-group") 
      label(for="phone") Số điện thoại
      input(
        type="text"
        class="form-control"
        id="phone"
        name="phone"
        required
      )
    div(
      class="form-group"
      upload-image
    )
      label(for="avatar") Avatar
      input(
        type="file"
        class="form-control-file"
        id="avatar"
        name="avatar"
        accept="image/*"
        upload-image-input
      )
      img(
        class="image-preview"
        upload-image-preview
      )
      
    div(class="form-group")
      label(for="role_id") Phân quyền 
      select(for="role_id" id="role_id" name="role_id" class="form-control")
        option(disabled) -- Chọn --
        option(value="") Quản trị viên
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked
      )
      label(for="statusActive" class="form-check-label") Hoạt động
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusInactive"
        name="status"
        value="inactive"
        checked
      )
      label(for="statusActive" class="form-check-label") Dừng hoạt động
    
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Tạo mới
    
        